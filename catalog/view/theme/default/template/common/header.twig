<!DOCTYPE html>
<html dir="{{ direction }}" lang="{{ lang }}">
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		 <script type="text/javascript" src="/catalog/view/javascript/jquery/jquery-3.7.0.min.js"></script>
		 <script src="/catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
			{% if scripts %}{% for script in scripts %}
				 <script src="{{ script }}" type="text/javascript"></script>
			{% endfor %}
		{% endif %}
		<link href="/catalog/view/theme/default/stylesheet/stylesheet.css" type="text/css" rel="stylesheet"/>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<script src="https://www.google.com/recaptcha/api.js?onload=onloadReviewCaptcha&render=explicit" async defer></script>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
		<meta property="og:image" content="{{ product.thumb }}">
		<title>{{ title }}</title>
		<base href="{{ base }}"/>
		{% if description %}
			<meta name="description" content="{{ description }}"/>
		{% endif %}
		{% if keywords %}
			<meta name="keywords" content="{{ keywords }}"/>
		{% endif %}
		 <script src="/catalog/view/javascript/common.js" type="text/javascript"></script>

		{% for style in styles %}
			<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}"/>
		{% endfor %}
		{% for script in scripts %}
			 <script src="{{ script.href }}" type="text/javascript"></script>
		{% endfor %}
		{% for link in links %}
			<link href="{{ link.href }}" rel="{{ link.rel }}"/>
		{% endfor %}
		{% for analytic in analytics %}
			{{ analytic }}
		{% endfor %}
		{{ schemas_org }}

	</head>
	<body>
		<header class="container">

			<div id="search-input-container" class="search-input-container">
				<div class="wrapper">
					<input type="text" id="search-input" placeholder="Szukaj...">
					<span class="close-btn" id="close-search">&times;</span>
				</div>
				<div id="live-search" class="live-search">
					<ul></ul>
					<div class="result-text"></div>
				</div>
			</div>
			<div>
				<img id="menu-icon" src="image/catalog/assets/menu_icon.svg">
			</div>
			<div class="logo">
				<a href="/">
					<img src="image/catalog/assets/logo.svg">
				</a>
			</div>
			<div class="right-group">
				<img id="search-icon" src="image/catalog/assets/search.svg"/>
				<div id="cart-button" class="cart-button">
					<div id="cart-count-wrap">
						<div id="cart-count">0</div>
					</div>
					<img height="25" src="image/catalog/assets/add_to_cart_ico.svg">
				</div>
			</div>
		</header>


		<div id="modalCart" class="modal-cart">
			<span class="close-btn" id="closeCart">&times;</span>

			<div class="top">
				<p>Zawartość koszyka</p>
			</div>
			<div id="cart-list" class="list"></div>
			<div class="bottom">

				<div class="left">
					<p>Wzystko</p>
					<p id="total">0</p>
				</div>
				<div class="right">
					<a class="checkout" href="/index.php?route=checkout/buy">
						<div>
							ZŁOŻ ZAMÓWIENIE
						</div>
					</a>
				</div>

			</div>
		</div>
		<div id="modalMenu" class="modal-menu">
			<span class="close-btn" id="closeMenu">&times;</span>
			<div class="toggle-page-btn" id="togglePage"><img src="image/catalog/assets/arrow_right.svg"/></div>
			<div id="first-page" class="left">
				<ul>
					<li>
						<a href="/sklep">Sklep</a>
					</li>
					<li>
						<a href="/hurtownia">Platforma B2B</a>
					</li>
					<li>
						<a href="/wspolpraca">Współpraca</a>
					</li>
					<li>
						<a href="/blog">Blog</a>
					</li>
					<li>
						<a href="/kontakt">Kontakt</a>
					</li>
					<li>
						<a href="/konto">Moje konto</a>
					</li>
				</ul>

				<div id="socials" class="bottom">
					<a href="https://allegro.pl/uzytkownik/spichlerz24pl?order=m" target="_blank" rel="noopener"><img src="image/catalog/assets/allegro_icon_brown.svg"/></a>
					<a href="https://www.instagram.com/spichlerz24.pl/" target="_blank" rel="noopener"><img src="image/catalog/assets/instagram_icon_brown.svg"/></a>
					<a href="https://www.facebook.com/spichlerz24" target="_blank" rel="noopener"><img src="image/catalog/assets/facebook_icon_brown.svg"/></a>
				</div>
			</div>
			<div id="second-page" class="right">
				<ul>
					{% for category in shop_categories %}
						<li>
							<a href="{{ category.href }}">{{ category.name | upper }}</a>
						</li>
					{% endfor %}
				</ul>
				<div id="menu-bottom" class="bottom">
					<div>
						<div>Masz Pytania? Zadzwoń</div>
						<div>+48 502 879 474</div>
					</div>
					<div>
						<div>Poland, woj. Małopolskie,</div>
						<div>Kraków, ul. Blokowa 2</div>
					</div>
				</div>
			</div>

		</div>
	</body>
</html>
