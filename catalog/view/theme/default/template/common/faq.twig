{% if faqs %}
<section class="faq" itemscope itemtype="https://schema.org/FAQPage">
  {% for faq in faqs %}
    <article class="faq__item" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
      <h3 class="faq__title">
        <button
          class="faq__button"
          type="button"
          aria-expanded="false"
          aria-controls="faq-a-{{ loop.index }}"
          id="faq-q-{{ loop.index }}"
        >
          <span class="faq__icon" aria-hidden="true">
            <svg viewBox="0 0 24 24" class="faq__chevron" width="20" height="20">
              <path d="M6 9l6 6 6-6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
          <span class="faq__question" itemprop="name">{{ faq.question|raw }}</span>
        </button>
      </h3>

      <div
        class="faq__answerWrap"
        id="faq-a-{{ loop.index }}"
        role="region"
        aria-labelledby="faq-q-{{ loop.index }}"
        itemscope
        itemprop="acceptedAnswer"
        itemtype="https://schema.org/Answer"
      >
        <div class="faq__answer" itemprop="text">
          {{ faq.answer|raw }}
        </div>
      </div>
    </article>
  {% endfor %}
</section>

<style>
.faq {
  --faq-radius: .5rem;
  --faq-border: #e6e6e6;
  --faq-bg: #fff;
  --faq-muted: #666;
  --faq-accent: #2b7cff;
  margin: 2rem 20px;
}

.faq__item {
  border: 1px solid var(--faq-border);
  border-left: 4px solid var(--faq-accent);
  border-radius: var(--faq-radius);
  background: var(--faq-bg);
  margin-bottom: 1rem;
  overflow: hidden;
  transition: box-shadow .2s ease;
}
.faq__item:hover { box-shadow: 0 4px 14px rgba(0,0,0,.08); }

.faq__title { margin: 0; }

.faq__button {
  width: 100%;
  text-align: left;
  display: grid;
  grid-template-columns: 24px 1fr;
  align-items: center;
  gap: .75rem;
  padding: 1rem 1.25rem;
  background: linear-gradient(#fafafa, #f7f7f7);
  border: 0;
  cursor: pointer;
  font-weight: 600;
  position: relative;
}

.faq__icon { display: inline-flex; justify-content: center; align-items: center; }
.faq__chevron {
  transition: transform .2s ease;
}

.faq__button[aria-expanded="true"] .faq__chevron {
  transform: rotate(180deg);
}

.faq__question {
  white-space: normal;
  word-break: break-word;
}

.faq__answerWrap {
  max-height: 0;
  overflow: hidden;
  transition: max-height .3s ease, padding .3s ease;
  padding: 0 1.25rem;
}

.faq__answerWrap.is-open {
  padding: 1rem 1.25rem 1.25rem;
}

.faq__answer {
  color: var(--faq-muted);
  line-height: 1.6;
}

/* Уважение к пользователям с ограничениями по анимации */
@media (prefers-reduced-motion: reduce) {
  .faq__chevron,
  .faq__answerWrap {
    transition: none;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const items = document.querySelectorAll('.faq__item');

  items.forEach((item) => {
    const btn = item.querySelector('.faq__button');
    const panel = item.querySelector('.faq__answerWrap');

    // Инициализация высоты (свёрнуто)
    panel.style.maxHeight = '0px';

    btn.addEventListener('click', () => {
      const expanded = btn.getAttribute('aria-expanded') === 'true';

      if (expanded) {
        // Закрыть
        panel.style.maxHeight = panel.scrollHeight + 'px'; // зафиксировать текущую
        requestAnimationFrame(() => {
          panel.style.maxHeight = '0px';
          panel.classList.remove('is-open');
          btn.setAttribute('aria-expanded', 'false');
        });
      } else {
        // Открыть
        panel.classList.add('is-open');
        panel.style.maxHeight = panel.scrollHeight + 'px';
        btn.setAttribute('aria-expanded', 'true');

        // После анимации — auto (для адаптивности, если контент меняется)
        const onTransitionEnd = (e) => {
          if (e.propertyName === 'max-height') {
            panel.style.maxHeight = 'none';
            panel.removeEventListener('transitionend', onTransitionEnd);
          }
        };
        panel.addEventListener('transitionend', onTransitionEnd);
      }
    });
  });
});
</script>
{% endif %}
